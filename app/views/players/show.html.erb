<div class="profile">
  <div class="profile-image">
    <% if @player.avatar %>
      <%= image_tag(@player.avatar.small.url)%>
    <% else %>
      <%= image_tag("default image")%>
    <% end %>
  </div>
  <div class="profile-stats">
    <h2><%= @player.username %></h2>
    <h3><%= pluralize(player.games_played, 'GAMES PLAYED') %> | <%= pluralize(player.games_won, 'WIN') %></h3> 
    <h3><%= link_to('BACK', leaderboard_path) %></h3>
  </div>
</div>