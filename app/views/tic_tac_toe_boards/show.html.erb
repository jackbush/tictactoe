<div class="ttt-board">
  <% @game.board.each do |square| %>
    <% if square == 'x' %>
      <div class="ttt-square <% if @game.p1_squares.include? 'w' %>win<% end %>"><span class="board-marker">x</span></div>
    <% elsif square == 'o' %>
      <div class="ttt-square <% if @game.p2_squares.include? 'w' %>win<% end %>"><span class="board-marker">o</span></div>
    <% else %>
      <div class="ttt-square"></div>
    <% end %>
  <% end %>
</div>